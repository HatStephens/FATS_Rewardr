<section class="wrapbadgepage">
  <section class="holderbadgepage">
    <section class="navbar">

      <a href="/users/show"><img src="/images/logo-01.png" class="navlogo"></a>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "signoutnav" %>
      <a href="users/profile"><section class="avatarnav"></section></a>

    </section>

    <section class="main">

      <h3>Reward your Employees:</h3>

      <section id='built_in_badges'>
        <%= form_for @badge do |f| %>
          <%= f.label :employee %>
          <%= f.collection_select :user, User.all, :id, :name %>
          <%= f.label :badge %>
          <%= f.collection_select :name, Badge::BADGES, :to_s, :titleize %>
          <%= f.submit 'Reward' %>
        <% end %>
      </section>

      <br />
      <br />

      <section id='custom_badges'>
        <h3>Or create your own Reward below:</h3>
        <%= form_for @badge do |f| %>
          <%= f.label :employee %>
          <%= f.collection_select :user, User.all, :id, :name %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.submit 'Custom Reward' %>
      <% end %>
      </section>

      <br />
      <br />
      <br />
      <br />
      <br />

    <section class="rewarding">

      <!-- <section class="buttonleft"> -->
        <button id="left"></button>
      <!-- </section> -->

        <section class="reward">
          <img src="/images/logo_black-01.png" id="reward_image"/>
        </section>



    </section>





    </section>

  </section>
</section>