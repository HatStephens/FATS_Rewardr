
<head>

</head>

<html>

<body>

  <section class="navbar">
      <a href="/users/show"><img src="/images/logo-01.png" class="navlogo"></a>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "signoutnav" %>
      <a href="/users/profile"><section class="avatarnav"></section></a>
      <% if current_user.role == 'admin' %>
        <%= link_to 'Reward Employee', new_badge_path, class: "signoutnav" %>
      <% end %>

    </section>

      <!-- TOP ROW -->

      <section id="tileswrap">

        <section id="topwrap">

          <section class="tileheader">
            <h1 class="headertitle">Your Statistics</h1>
          </section>

            <section id="tile1">
              <section class="infotile">
                <section class="topnumbertiles">
                  <img class="rewardicon" src="/images/rewardicon-01.png">
                  <h2><%= days_since_last_reward(current_user) %></h2>
                  <p>days ago</p>
                </section>
                  <section class="toptexttiles">
                    <h3>DAYS SINCE LAST REWARD</h3>
                  </section>
              </section>
            </section>

            <section id="tile2">
              <section class="infotile">
                <section class="topnumbertiles">
                  <img class="rewardicon" src=<%= reward_image(most_popular_reward(current_user)) %>>
                  <% if @my_badges.any? %>
                    <p><%= most_popular_reward(current_user) %> </p>
                    <p><%= count_of_most_popular_reward(current_user) %></p>
                  <% end %>
                </section>
                  <section class="toptexttiles">
                    <h3>MOST REWARDED REWARD</h3>
                  </section>
              </section>
            </section>

            <section id="tile3">
              <section class="infotile">
                <section class="topnumbertiles">
                  <img class="rewardicon" src="/images/rewardicon2-01.png">
                  <% if @my_badges.any? %>
                  <h2><%= total_number_of_rewards(current_user) %></h2><% end %>
                  <p>rewards in total</p>
                </section>
                  <section class="toptexttiles">
                    <h3>TOTAL NUMBER OF REWARDS</h3>
                  </section>
              </section>
            </section>

    </section>

    <!-- MIDDLE ROW  -->

    <section id ="middlewrap">

      <section class="tileheader">
            <h1 class="headertitle">My Latest Rewards</h1>
          </section>

    <section id="tile4">
      <section class="infotile">
        <section class="middlebadgetiles">
          <img class="rewardicon" src=<%= reward_image(show_last_six_rewards_reward(current_user, 1)) %>>
          <% if @my_badges.length > 0 %>
            <p><%= show_last_six_rewards_reward(current_user, 1) %></p>
            <p><%= show_last_six_rewards_date(current_user, 1) %></p>
          <% else %>
            <p>There is no reward</p>
          <% end %>
        </section>
          <section class="middletexttiles">
            <h3>LATEST REWARD</h3>
          </section>
      </section>
    </section>

    <section id="tile5">
      <section class="infotile">
        <section class="middlebadgetiles">
          <img class="rewardicon" src=<%= reward_image(show_last_six_rewards_reward(current_user, 2)) %>>
          <% if @my_badges.length > 1 %>
             <p><%= show_last_six_rewards_reward(current_user, 2) %></p>
            <p><%= show_last_six_rewards_date(current_user, 2) %></p>
          <% else %>
            <p>There is no reward</p>
          <% end %>
        </section>
          <section class="middletexttiles">
            <h3>LATEST REWARD</h3>
          </section>
      </section>
    </section>

      <section id="tile6">
        <section class="infotile">
          <section class="middlebadgetiles">
            <img class="rewardicon" src=<%= reward_image(show_last_six_rewards_reward(current_user, 3)) %>>
          <% if @my_badges.length > 2 %>
            <p><%= show_last_six_rewards_reward(current_user, 3) %></p>
            <p><%= show_last_six_rewards_date(current_user, 3) %></p>
          <% else %>
            <p>There is no reward</p>
          <% end %>
        </section>
        <section class="middletexttiles">
          <h3>LATEST REWARD</h3>
        </section>
      </section>
    </section>

  </section>

    <!-- BOTTOM ROW -->

    <section id="bottomwrap">

      <section class="tileheader">
            <h1 class="headertitle">Latest Co-Worker Rewards
          </section>

    <section id="tile7">
      <section class="infotile">
        <section class="bottombadgetiles">
                      <img class="rewardicon" src=<%= reward_image(show_recent_reward_name(0)) %>>
          <% if @all_badges.length > 0 %>
            <p><%= show_recent_reward_employee(0) %></p>
            <p><%= show_recent_reward_name(0) %></p>
            <p><%= show_recent_reward_date(0) %></p>
          <% end %>
        </section>
          <section class="bottomtexttiles">
            <h3>RECENT REWARD</h3>
          </section>
      </section>
    </section>

    <section id="tile8">
      <section class="infotile">
        <section class="bottombadgetiles">
                      <img class="rewardicon" src=<%= reward_image(show_recent_reward_name(1)) %>>
          <% if @all_badges.length > 1 %>
            <p><%= show_recent_reward_employee(1) %></p>
            <p><%= show_recent_reward_name(1) %></p>
            <p><%= show_recent_reward_date(1) %></p>
          <% end %>
        </section>
          <section class="bottomtexttiles">
            <h3>RECENT REWARD</h3>
          </section>
      </section>
    </section>

    <section id="tile9">
      <section class="infotile">
        <section class="bottombadgetiles">
            <img class="rewardicon" src=<%= reward_image(show_recent_reward_name(2)) %>>
          <% if @all_badges.length > 2 %>
            <p><%= show_recent_reward_employee(1) %></p>
            <p><%= show_recent_reward_name(1) %></p>
            <p><%= show_recent_reward_date(1) %></p>
          <% end %>
        </section>
          <section class="bottomtexttiles">
                        <h3>RECENT REWARD</h3>
          </section>
      </section>
    </section>

  </section>
</section>

</body>

</html>

