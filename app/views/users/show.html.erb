<html>

<body>

  <section class="dashboard">

    <section class="menu">

      <section class="title">
        Profile
      </section>

      <section class="username">
        <%= current_user.name %>
      </section>

      <section class="signout">
        <% if user_signed_in? %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        <% end %>
      </section>

    </section>
    <!-- Boys, I have added a class to the next section without doing any CSS -->
    <section class="mystats">
      <h3>My Stats:</h3>
      <section class="statsdisplay">
        
        <section id="dayssince">

          <%= days_since_last_reward(current_user) %>
          <p>DAYS SINCE LAST REWARD</p>
        </section>

        <section id="mostrewarded">
        <% if @my_badges.any? %>
          <%= most_popular_reward(current_user) %><% end %>
          <p>MOST REWARDED REWARD</p>
        </section>

        <section id="totalrewards">
        <% if @my_badges.any? %>
          <%= total_number_of_rewards(current_user) %><% end %>
          <p>TOTAL NUMBER OF REWARDS</p>
        </section>

      </section>

      

    </section>
    <br />
    <hr />
    <br />
    <section class="myrewards">
      <h3>My Rewards:</h3>
      <section class="rewardsdisplay">
        <section>
          <% if @my_badges.length > 0 %>
            <%= show_last_six_rewards(current_user, 1) %>
          <% else %>
            <p>There is no reward</p>
          <% end %>
        </section>
        <section>
          <% if @my_badges.length > 1 %>
            <%= show_last_six_rewards(current_user, 2) %>
          <% else %>
            <p>There is no reward</p>
          <% end %>
        </section>
        <section>
          <% if @my_badges.length > 2 %>
            <%= show_last_six_rewards(current_user, 3) %>
          <% else %>
            <p>There is no reward</p>
          <% end %>
        </section>
      </section>
    </section>
    <br />
    <hr />
    <br />
  <section class="recentrewards">
      <h3>Recent Rewards:</h3>
      <section class="recentrewardsdisplay">
        <section>
          <% if @all_badges.length > 0 %>
          <%= show_recent_badge(0) %><% end %>
        </section>
        <section>
          <% if @all_badges.length > 1 %>
          <%= show_recent_badge(1) %><% end %>
        </section>
        <section>
          <% if @all_badges.length > 2 %>
          <%= show_recent_badge(2) %><% end %>
        </section>
      </section>
    </section>
    <br />
    <hr />
    <br />
    <section class="rewardlink">
      <!-- This is the button that Bob can click on to issue a badge to an employee -->
      <% if current_user.email=='bob@test.com' %>
        <%= link_to 'Reward Employee', new_badge_path, 'data-no-turbolink' => true %>
      <% end %>
    </section>

  </section>

</body>

</html>

