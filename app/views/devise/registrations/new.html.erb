<html>
<head>
  <link rel="stylesheet" type="text/css" href="sign_up.css">
</head>
<body>
  <section class="wrap">
    <section class="holder">
      <section class="signup-form">
        <img id="logo1" src="../images/logo_black-01.png"><br><br><br>
        <section class="usersignup">User Sign Up</section>
        <section class="login">
          <%= render "devise/shared/links" %>
        </section>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <section class="fields">
          <%= f.email_field :email, class: "email", autofocus: true, :placeholder => "Email" %>
          <%= f.text_field :name, class: "name", autofocus: true, :placeholder => "Name (Minimum Characters 8)"%>
          <%= f.password_field :password, autocomplete: "off", class: "password", :placeholder => "Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "password", :placeholder => "Password Confirmation" %>
        </section>
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
          <% end %>
      </section>
    </section>
  </section>
</body>
</html>
