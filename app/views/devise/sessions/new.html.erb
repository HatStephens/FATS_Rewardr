<html>
<head>
  <link rel="stylesheet" type="text/css" href="sign_in.css">
</head>
<body>
  <section class="wrap">
    <section class="holder">
      <section class="login-form">
        <img id="logo1" src="../images/logo_black-01.png"><br><br><br>
        <section class="userlogin">User Login</section>

        <section class="forgot">
          <%= render "devise/shared/links" %>
        </section>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <section class="fields">
                <%= f.email_field :email, autofocus: true, :placeholder => "Email", class: "email" %>

                <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "password" %>
            </section>

            <% if devise_mapping.rememberable? -%>
              <div class="remember">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <section class="actions">
              <%= f.submit "Log in" %>
            </section>
          <% end %>

      </section>
    </section>
  </section>
</body>
</html>